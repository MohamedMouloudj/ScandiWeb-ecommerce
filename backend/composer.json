{
  "name": "scandiweb/ecommerce-backend",
  "description": "E-commerce GraphQL Backend",
  "type": "project",
  "scripts": {
    "lint": "phpcs --standard=PSR1 src/ && phpcs --standard=PSR12 src/",
    "lint-fix": "phpcbf --standard=PSR1 src/ && phpcbf --standard=PSR12 src/"
  },
  "require": {
    "php": "^8.1",
    "webonyx/graphql-php": "^15.21.2",
    "vlucas/phpdotenv": "^5.0",
    "doctrine/orm": "^3.5",
    "doctrine/dbal": "^4.3",
    "symfony/cache": "^7.3",
    "nikic/fast-route": "^1.3"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.13"
  }
}
